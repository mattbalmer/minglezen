// ===============
// Base Controls
// ===============
.card-controls
    height 20px
    display none
    border-top 1px solid
    position absolute
    bottom 0
    left 0
    width 100%
    font-size 10px
    line-height 20px
    cursor pointer
    font-weight bold
    color #166592

.controls-inner-wrapper
    position relative
    height inherit
    width 100%
    text-align center

// Visible
.card.show-controls
    padding-bottom 32px !important

    .card-controls
        display block

// ===============
// Block Button
// ===============
.card-controls .block-button
    opacity .6
    position absolute
    left 0
    padding 0 5px

    &:hover
        opacity 1

// ===============
// Open Button
// ===============
.card-controls .open
    display inline-block
    text-align center
    opacity .6
    padding 0 5px

    &:hover
        opacity 1

// ===============
// Movement Ctrls
// ===============
.card-controls .move-controls
    position absolute
    display inline-block
    right 0
    top 0

    > *
        display inline-block
        padding 0 5px
        opacity .6

        &:hover
            opacity 1
